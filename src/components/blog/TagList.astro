---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {
    tags.map((tag) => (
      <a
        href={`/blog/tag/${tag.toLowerCase()}`}
        class="badge badge-outline badge-sm hover:badge-primary transition-colors"
      >
        #{tag}
      </a>
    ))
  }
</div>
