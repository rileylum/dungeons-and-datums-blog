---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Tools | Dungeons and Datums" description="OSR and Old School D&D tools for character generation, region mapping, and campaign preparation">
  <div class="container mx-auto px-4 py-16 max-w-4xl">
    <h1 class="text-5xl font-bold mb-6 text-center">Tools</h1>
    <p class="text-xl text-center text-base-content/80 mb-12">
      OSR gaming tools and utilities for Old School D&D campaigns
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-shadow">
        <div class="card-body">
          <h2 class="card-title">ODD Character Generator</h2>
          <p class="text-base-content/80">
            Generate random characters for my Stonehell Open Table game.
          </p>
          <div class="card-actions justify-end mt-4">
            <a
              href="https://tools.dungeons-and-datums.com/odd-char-gen/"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-primary btn-sm"
            >
              Open Tool
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 ml-1"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-shadow">
        <div class="card-body">
          <h2 class="card-title">Campaign Region Generator</h2>
          <p class="text-base-content/80">
            Procedural terrain generator with climate modeling and biome classification.
          </p>
          <div class="card-actions justify-end mt-4">
            <a
              href="https://tools.dungeons-and-datums.com/campaign-region"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-primary btn-sm"
            >
              Open Tool
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 ml-1"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
